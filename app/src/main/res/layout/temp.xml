<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="The park is open."
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_size_headline_material" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_between_content"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Genres"
            android:textAppearance="@style/MaterialTextviewTitle" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="{Genre}"
            android:textAppearance="@style/MaterialTextviewSubhead"
            android:layout_marginLeft="72dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="{Genre}"
            android:textAppearance="@style/MaterialTextviewSubhead"
            android:layout_marginLeft="72dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="{Genre}"
            android:textAppearance="@style/MaterialTextviewSubhead"
            android:layout_marginLeft="72dp"
            />




        <TextView
            android:paddingTop="@dimen/space_between_content"
            android:paddingBottom="@dimen/space_between_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Overview"
            android:textAppearance="@style/MaterialTextviewTitle" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{The actual overview}"
            android:textAppearance="@style/MaterialTextviewBody"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="@dimen/space_between_content"
            />







        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />


        <TextView
            android:id="@+id/Runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Runtime}"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/Language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Language}"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/Popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Popularity}"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/Budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Budget}"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/Revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Revenue}"
            android:textColor="@color/primary_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/Companies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Companies}"
            android:textColor="@color/primary_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home Page" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IMDB" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
