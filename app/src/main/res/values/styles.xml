<resources>



    <style name="MaterialTheme" parent="MaterialTheme.Base"> </style>



    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>



    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter_white_24dp</item>
    </style>

    <style name="MaterialTextviewTitle" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_title_material</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="MaterialTextviewSubhead" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_subtitle_material_toolbar</item>
        <item name="android:fontFamily">@string/font_family_medium</item>

        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="MaterialTextviewBody" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>




</resources>
